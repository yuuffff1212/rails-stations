<h3>movie update</h3>
<%= form_with(model: @movie, url: admin_movie_path(@movie.id), local: true) do |f| %>
  <%= render 'layouts/error_messages', model: @movie %>
  <%= render 'layouts/flash_messages' %>

  <div>
    <%= f.label "映画タイトル" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label "公開年" %>
    <%= f.text_field :year %>
  </div>
  <div>
    <%= f.label "上映中か" %>
    <%= f.check_box :is_showing, :as => :boolean %>
  </div>
  <div>
    <%= f.label "概要" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label "画像URL" %>
    <%= f.file_field :image_url %>
  </div>
  <%= f.submit '更新する' %>
<% end %>

<%= link_to "一覧画面へ戻る", admin_movies_path %>
